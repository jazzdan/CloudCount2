<h1><%= link_to @budget.title, budget_path(@budget) %></h1>

<ul class="pills pull-right">
  <li class="active"><a href="#">Home</a></li>
  <li><a href="#">Profile</a></li>
  <li><a href="#">Messages</a></li>
  <li><a href="#">Settings</a></li>
  <li><a href="#">Contact</a></li>
</ul>

<table class="table table-highlight">

    <thead>

        <tr>
            <th>Title</th>
            <th>Budget</th>
            <th>Starts</th>
            <th>Ends</th>
        </tr>

    </thead>

    <tbody>

        <tr>
            <td><%= @budget.title %></td>
            <td></td>
            <td><%= @budget.starts %></td>
            <td><%= @budget.ends %></td>
            <td class="controls">
                <%= link_to "Edit", edit_budget_path(@budget) %>
                <%= link_to "Delete", budget_path(@budget), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'danger' %>
            </td>
        </tr>

    </tbody>

</table>