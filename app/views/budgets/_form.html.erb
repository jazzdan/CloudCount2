
<fieldset>

    <div class="control-group">
        <%= f.label :title, t("activerecord.attributes.budget.title", :default => "Title"), :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :title, :class => 'text_field' %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :description, t("activerecord.attributes.budget.description", :default => "Description"), :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :description, :class => 'text_field' %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :starts, t("activerecord.attributes.budget.starts", :default => "Starts"), :class => 'control-label' %>
        <div class="controls">
            <%= f.number_field :starts, :class => 'number_field' %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :ends, t("activerecord.attributes.budget.ends", :default => "Ends"), :class => 'control-label' %>
        <div class="controls">
            <%= f.number_field :ends, :class => 'number_field' %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :rolls, t("activerecord.attributes.budget.rolls", :default => "Rolls"), :class => 'control-label' %>
        <div class="controls">
            <%= f.select :rolls, Budget::ROLLS %>
        </div>
    </div>

</fieldset>


<div class="form-actions">
    <button class="btn btn-primary" type="submit">Save</button> or
    <%= link_to "Cancel", @budget.id.nil? ? budgets_path : budget_path(@budget), :class => 'danger' %>
</div>
