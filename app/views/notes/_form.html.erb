
<fieldset>

  <div class="control-group">
    <div class="input">
      <%= f.text_field :title, :class => 'text_field', :placeholder => '' %>
    </div>
  </div>

  <div class="control-group">
    <div class="input">
      <%= f.text_field :contents, :class => 'text_field', :placeholder => 'note...' %>
    </div>
  </div>

</fieldset>

<fieldset>

  <div class="actions">
    <button class="btn primary" type="submit">Save</button> or
  	<%= link_to "Cancel", notes_path %>
  </div>

</fieldset>
