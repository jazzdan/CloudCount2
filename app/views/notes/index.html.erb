
<section class="form span12">

  <!-- new note -->
  <%= form_for [@budget, @note], :url => budget_notes_path, :html => { :class => 'well form-inline pull-right' } do |f| -%>
    
    <%= f.text_field :title, :class => 'text_field input-small', :placeholder => 'title' %>

    <%= f.text_field :contents, :class => 'text_field input-xlarge', :placeholder => 'note...' %>

    <button class="btn btn-primary" type="submit">Add Note</button>

  <% end -%>

</section>

<!-- notes list -->
<section class="notes span12">

<table class="table table-striped">
 <thead>
  <tr>
    <th>
      <%= t("activerecord.attributes.note.title", :default => t("activerecord.labels.title", :default => "Title")) %>
    </th>
    <th>Note</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @notes.each do |note| -%>
   <tr>
    <td><%= note.title %></td>
    <td><%= note.contents %></td>
    <td><%= note.created_at %></td>
    <td class="controls">
      <%= link_to "Destroy", budget_note_path(@budget, note), :method => :delete, :class => 'danger', :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
    </td>
    </tr>
    <% end -%>
   </tbody>
</table>

</section>