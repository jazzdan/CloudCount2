<!DOCTYPE html>
<html>
<head>
  <title>CloudCount2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- top bar -->
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">

      <!-- title -->
      <a class="brand" href="/">Cloud Count</a>


      <!-- nav -->
      <ul class="nav">

        <li><a href="/">Budgets</a></li>

        <li>
          <!-- search -->
          <form class="navbar-search pull-left" action="">
            <input type="text" class="search-query span2" placeholder="Search">
          </form>
        </li>
      </ul>

      <!-- settings -->
      <ul class="nav pull-right">
        <% if @current_user %>
          <li><%= @current_user.display_name if @current_user %></li>
          <li><a href="@{Secure.logout()}" data-bypass="true">Logout</a></li>
          <li class="dropdown"><a href="/users" class="dropdown-toggle" data-bypass="true">Users</a></li>
          <li><a href="/settings"  data-bypass="true">Settings</a></li>
          <li class="<%= controller.controller_path == 'attachments' ? 'active' : '' %>"><a href="<%= attachments_path %>">Attachments</a></li>
        <% else %>
          <li><%= link_to 'Login', login_path, class: 'login_link' %></li><li><%= link_to 'Signup', signup_path %></li>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


<!-- content -->
<div id="main" role="main" class="container">

<% if flash[:notice] || flash[:error] %>
  <div id="status_bar" class="container">
    <%= render :partial => 'shared/flash_bar' %>
  </div>
<% end %>

<%= yield %>

</div>

</body>
</html>
