<% if flash[:notice] %>
  <div class="alert alert-block alert-warning">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-block alert-error">
    <a class="close" data-dismiss="alert" href="#">×</a>
    <%= flash[:error] %>
  </div>
<% end %>
