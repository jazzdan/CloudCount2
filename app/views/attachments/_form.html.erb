<fieldset>

    <div class="control-group">
       <%= f.label :name, t("activerecord.attributes.attachment.name", :default => "Name"), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
       <%= f.label :label, t("activerecord.attributes.attachment.label", :default => "Label"), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :label, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
       <%= f.label :description, t("activerecord.attributes.attachment.description", :default => "Description"), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :file, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :file %>
      </div>
    </div>

</fieldset>

<div class="form-actions">
  <button class="btn btn-primary" type="submit">Save</button> or
	<%= link_to "Cancel", budget_attachments_path, :class => 'danger' %>
</div>
